<Page
    x:Class="Ntruk.GUI.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ntruk"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:na="using:Ntruk.API">

    <Page.Resources>
        <DataTemplate x:Key="HomeObj" x:DataType="na:HomeObj">
            <RelativePanel MinWidth="300" Height="72" x:Name="ItemPanel">
                <Image x:Name="iconImage"
                       Source="{x:Bind IconLocation}"
                       Width="64"
                       Height="64"
                       RelativePanel.AlignLeftWithPanel="True"
                       Margin="4, 4, 2, 4"/>
                <TextBlock x:Name="titleText"
                           Text="{x:Bind Title}"
                           RelativePanel.RightOf="iconImage"
                           Margin="2, 4, 4, 2"
                           FontWeight="Bold"
                           FontSize="16"/>
                <TextBlock x:Name="descriptionText"
                           Text="{x:Bind Description}"
                           RelativePanel.Below="titleText"
                           RelativePanel.RightOf="iconImage"
                           Foreground="#7f7f7f"
                           FontSize="12"/>
            </RelativePanel>
        </DataTemplate>
    </Page.Resources>
    <Grid x:Name="mainPanel">
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Ntruk"
                   FontSize="50"
                   Grid.Row="0"
                   VerticalAlignment="Center"
                   x:Name="titleText"/>
        <GridView x:Name="contentView"
                  Grid.Row="1"
                  SelectionMode="Single"
                  ItemTemplate="{StaticResource HomeObj}"
                  IsItemClickEnabled="True"
                  SelectionChanged="ContentView_SelectionChanged">
            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem">
                    <Setter Property="Margin" Value="4"/>
                </Style>
            </GridView.ItemContainerStyle>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid x:Name="MaxItemsWrapGrid"
                           MaximumRowsOrColumns="3"
                           Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>
    </Grid>
</Page>
